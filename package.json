{
  "name": "ngx-translate-lookup",
  "displayName": "ngx-translate-lookup",
  "description": "Lookup resources.resx translations for ngx-translate",
  "repository": {
    "url": "https://github.com/apk27/ngx-translate-lookup",
    "type": "git"
  },
  "homepage": "https://github.com/apk27/ngx-translate-lookup/master/README.md",
  "version": "1.0.1",
  "publisher": "apk27",
  "engines": {
    "vscode": "^1.25.0"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "angular",
    "ngx-translate",
    "translate"
  ],
  "activationEvents": [
    "onLanguage:html"
  ],
  "main": "./out/extension",
  "contributes": {
    "configuration": {
      "title": "ngx-translate translations lookup configuration",
      "properties": {
        "ngx-translate.lookup.resourcesPath": {
          "type": "string",
          "default": "Resources.en-GB.resx",
          "description": "Path to a resources.resx file for lookups.",
          "required": true
        },
        "ngx-translate.lookup.regex": {
          "type": "array",
          "default": [
            "translate=\"([A-Za-z0-9_]+)\"",
            "{{'([A-Za-z0-9_]+)' | translate }}"
          ],
          "description": "Regular expressions used to locate translation string/keys within documents.",
          "required": true
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "postinstall": "node ./node_modules/vscode/bin/install",
    "test": "npm run compile && node ./node_modules/vscode/bin/test"
  },
  "dependencies": {
    "resx": "1.2.0"
  },
  "devDependencies": {
    "typescript": "^2.6.1",
    "vscode": "^1.1.6",
    "tslint": "^5.8.0",
    "@types/node": "^7.0.43",
    "@types/mocha": "^2.2.42"
  }
}
